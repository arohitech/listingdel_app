<% layout('layouts/boilerplate') %>
  


    <div class="row justify-content-center">
      <div class="col-12 col-sm-10 col-mid-8 col-lg-6 ">
        <h3 class="card-title" ><%= listing.title %></h3>

<div class="card listing-card w-100 w-sm-75 w-md-50 w-lg-25 mx-auto" style="width: 39rem;">
  <img src="<%= listing.image.url %>" class="card-img-top mt-3" style="width: 100%; height: 200px; object-fit: cover;" alt=" listing_image">
  <div class="card-body mt-3">
    <p class="card-text"><%= listing.description %></p>
    <p class="card-text">&#8377; <%= listing.price.toLocaleString("en-IN") %>/night</p>
    <p class="card-text">Location: <%= listing.location %></p>
    <p class="card-text">Country: <%= listing.country %></p>

    <% if(currUser && listing.owner && currUser._id.equals(listing.owner._id)){%>
    <a href="/bylistings/<%= listing._id %>/edit" class="btn btn-dark edit-btn mt-2 mb-3">Edit</a>
    <form method="POST" action="/bylistings/<%=listing._id%>?_method=DELETE" class="d-inline">
      <button class="btn btn-dark mt-2 mb-3">Delete</button>
    </form>
  <%  }%>
  </div>
</div>
      <hr>
<div>
  
  <h4>Leave a Review</h4>
  <form  action = "/bylistings/<%=listing._id%>/review" method="post"  class= "needs-validation" novalidate>
   
 <div class="mt-3 mb-2">
  <label for="rating">Rating</label>
      <fieldset class="starability-slot">
        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
        <label for="first-rate1" title="Terrible">1 star</label>
        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
        <label for="first-rate2" title="Not good">2 stars</label>
        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
        <label for="first-rate3" title="Average">3 stars</label>
        <input type="radio" id="first-rate4" name="review[rating]"value="4" />
        <label for="first-rate4" title="Very good">4 stars</label>
        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
        <label for="first-rate5" title="Amazing">5 stars</label>
     </fieldset>
 </div>


    <div class="mt-3">
      <label for="Comment" class="form-label">comments</label>
      <textarea id="Comment"
       cols="30"
       rows="5"
       name="review[Comment]"
       class="form-control"
       required></textarea>
      <div class="invalid-feedback">Please enter a comment</div>
      <div class="valid-feedback">comment looks good!</div>
    </div>
    <button class="btn btn-outline-dark mb-3 mt-3">submit</button>

  </form>
 
</div>
   <hr>
 <% if(listing.reviews.length>0){%>
  <div class="row">
    <h3> ALL REVIEWS </h3> 
     <% listing.reviews.forEach(function(review){%>
      <div class="col-md-6 mb-3">
        <div class="card h-100 shadow-sm p-2">
           <div class="card-body">
              <h5 class="card-title">@<%=review.author.username%></h5>
              <p class="card-text"><%=review.Comment%></p>
              <p class="starability-result card-text" data-rating="<%=review.rating%>" > </p>

           </div>
           <form class="mb-1 mt-3" method="post" action="/bylistings/<%=listing._id%>/review/<%=review._id%>?_method=DELETE">
            <button class="btn btn-sm btn-dark">Delete</button>
           </form>
        </div>
      </div>
  
   <% })%>
    </div>
    <% } %>
  </div>
       
       
      

    </div>

    <script src="/js/script.js"></script>
  
